<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repo_list_item_parent_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_bottom_margin"
    android:elevation="@dimen/list_item_elevation"
    android:foreground="?selectableItemBackground"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingBottom="@dimen/list_item_vertical_padding"
      android:paddingEnd="@dimen/list_item_vertical_padding"
      android:paddingStart="@dimen/list_item_horizontal_padding"
      android:paddingTop="@dimen/list_item_vertical_padding"
      >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/repo_name_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:hint="Guava"
          style="@android:style/TextAppearance.DeviceDefault.Medium"
          />
      <TextView
          android:id="@+id/repo_description_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:hint="This is a library"
          android:maxLines="2"
          style="@android:style/TextAppearance.Small"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/star_count_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/ic_star_24dp"
          android:gravity="center"
          android:hint="14.562"
          />
      <TextView
          android:id="@+id/fork_count_tv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:drawableStart="@drawable/ic_fork_24dp"
          android:gravity="center|end"
          android:hint="1.234"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>